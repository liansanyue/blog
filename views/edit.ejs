<%- include header %>
<form method="post">
    标题：<br/>
    <input type="text" name="title" value="<%= posts.title %>" disabled/><br/>
    标签：<br/>
    <input type="text" name="tag1" value="<%= posts.tags[0] %>" /> <input type="text" name="tag2" value="<%= posts.tags[1] %>"/>
    <input type="text" name="tag3" value="<%= posts.tags[2] %>"/><br/>
    正文：<br/>
    <textarea name="post" rows="20" cols="100"><%=posts.post %></textarea><br/>
    <input type="submit" value="发表"/>
</form>
<%- include footer %>